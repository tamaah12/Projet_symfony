{% extends 'base.html.twig' %}

{% block main %}
<div class="container mx-auto p-4">

    <div class="bg-white rounded-lg shadow-md">
        <div class="bg-gray-800 text-white text-lg font-semibold p-4 rounded-t-lg">Liste des clients</div>
        <div class="p-6">
            <div class="overflow-x-auto">
                <div class="flex justify-end mb-4">
                    <a href="{{ path('client.create') }}" class="bg-green-500 text-white font-bold py-2 px-4 rounded inline-block">
                        Create
                    </a>
                </div>
                
                <div class="mb-4"> {# Formulaire de filtre avec espace #}
                    {{ form_start(filterForm, {'attr': {'class': 'space-y-4'}}) }}
                    {{ form_widget(filterForm) }}
                    <button type="submit" class="bg-blue-500 text-white font-bold py-2 px-4 rounded">
                        Filtrer
                    </button>
                    {{ form_end(filterForm) }}
                </div>

                <table class="min-w-full border border-gray-300 bg-blue-100 text-gray-800">
                    <thead class="bg-gray-700">
                        <tr>
                            <th class="px-6 py-3 text-left text-white font-semibold border border-gray-300">Nom</th>
                            <th class="px-6 py-3 text-left text-white font-semibold border border-gray-300">Prénom</th>
                            <th class="px-6 py-3 text-left text-white font-semibold border border-gray-300">Surname</th>
                            <th class="px-6 py-3 text-left text-white font-semibold border border-gray-300">Téléphone</th>
                            <th class="px-6 py-3 text-left text-white font-semibold border border-gray-300">Adresse</th>
                            <th class="px-6 py-3 text-left text-white font-semibold border border-gray-300">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                         {% for client in dataClients %}
                             <tr class="bg-blue-100 border-b border-gray-300">
                                 <td class="px-6 py-4 border border-gray-300">{{ client.compte ? client.compte.nom : 'N/A' }}</td>
                                 <td class="px-6 py-4 border border-gray-300">{{ client.compte ? client.compte.prenom : 'N/A' }}</td>
                                 <td class="px-6 py-4 border border-gray-300">{{ client.surname }}</td>
                                 <td class="px-6 py-4 border border-gray-300">{{ client.telephone }}</td>
                                 <td class="px-6 py-4 border border-gray-300">{{ client.adresse }}</td>
                                 <td class="px-6 py-4 border border-gray-300">
                                     <a href="{{ path('dette.create', {'clientId': client.id}) }}" class="bg-blue-500 text-white font-bold py-2 px-4 rounded">
                                      Dettes <span>&#8594;</span>
                                    </a>
                                 </td>
                             </tr>
                         {% else %}
                             <tr>
                                  <td colspan="6" class="text-center">Pas de clients.</td>
                             </tr>
                         {% endfor %}
                     </tbody>

                </table>

                <nav aria-label="Page navigation" class="mt-8">
                    <ul class="flex justify-end space-x-2">
                        <li class="disabled">
                            <a class="px-4 py-2 text-gray-500 bg-gray-200 rounded-md cursor-not-allowed" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li>
                            <a class="px-4 py-2 text-white bg-blue-500 rounded-md" href="#" aria-current="page">1</a>
                        </li>
                        <li>
                            <a class="px-4 py-2 text-blue-500 hover:bg-blue-100 rounded-md" href="#">2</a>
                        </li>
                        <li>
                            <a class="px-4 py-2 text-blue-500 hover:bg-blue-100 rounded-md" href="#">3</a>
                        </li>
                        <li>
                            <a class="px-4 py-2 text-gray-500 bg-gray-200 rounded-md cursor-not-allowed" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
{% endblock %}
