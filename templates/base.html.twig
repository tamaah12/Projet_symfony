<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        
        {% block stylesheets %}
            <link href="{{ asset('css/tailwind.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <header>
            <nav class="bg-gray-800 p-4">
                <div class="container mx-auto flex justify-between items-center">
                    <a class="text-white text-lg font-semibold" href="#">GESTION DE DETTE</a>
                    <div class="space-x-4">
                        <a class="text-white hover:text-gray-300" href="{{ path('client.index') }}">Client</a>
                    </div>
                    <form class="flex space-x-2">
                        <input
                            class="px-3 py-2 border border-gray-300 rounded-md"
                            type="text"
                            placeholder="Search"
                        />
                        <button
                            class="px-3 py-2 bg-green-500 text-white rounded-md hover:bg-green-600"
                            type="submit"
                        >
                            Search
                        </button>
                    </form>
                </div>
            </nav>
        </header>

        <main>
            <div class="container mx-auto p-4">
                {# Affichage des messages flash #}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success bg-green-500 text-white p-2 rounded-md mb-4">{{ message }}</div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-error bg-red-500 text-white p-2 rounded-md mb-4">{{ message }}</div>
                {% endfor %}

                {% block main %}
                {% endblock %}
            </div>
        </main>

        <footer class="bg-gray-800 text-white p-4 mt-4">
            <div class="container mx-auto text-center">
                &copy; {{ "now"|date("Y") }} Gestion de Dette. Tous droits réservés.
            </div>
        </footer>

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.0/dist/cdn.min.js" defer></script>
        {% endblock %}
    </body>
</html>
